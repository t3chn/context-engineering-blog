# AI Providers (at least one required)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_AI_API_KEY=...

# Default AI provider: claude | openai | gemini
AI_PROVIDER=claude

# Telegram
TELEGRAM_BOT_TOKEN=...
TELEGRAM_CHANNEL_ID=@your_channel

# Git automation (optional)
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true

# Blog URL (for linking in Telegram posts)
BLOG_URL=https://your-blog.com

# ElevenLabs (for video voice synthesis)
ELEVENLABS_API_KEY=sk_...
ELEVENLABS_VOICE_ID=...
ELEVENLABS_VOICE_ID_EN=...  # Optional: native English voice

# HeyGen (for avatar videos)
HEYGEN_API_KEY=...
