---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts", ({ data }) => {
  return data.lang === "ru" && !data.draft;
});

const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Context Engineering Blog" lang="ru">
  <section class="mb-12">
    <h1 class="text-4xl font-bold text-gray-900">Context Engineering</h1>
    <p class="mt-4 text-xl text-gray-600">
      Блог о context engineering, LLM и AI-разработке
    </p>
  </section>

  <section>
    <h2 class="mb-6 text-2xl font-bold text-gray-900">Последние посты</h2>
    {
      sortedPosts.length === 0 ? (
        <p class="text-gray-500">Пока нет постов. Скоро появятся!</p>
      ) : (
        <ul class="space-y-6">
          {sortedPosts.map((post) => (
            <li>
              <a href={`/posts/${post.id}`} class="group block">
                <article class="rounded-lg border border-gray-200 bg-white p-6 transition hover:border-primary-300 hover:shadow-md">
                  <time class="text-sm text-gray-500">
                    {new Intl.DateTimeFormat("ru-RU", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    }).format(post.data.date)}
                  </time>
                  <h3 class="mt-2 text-xl font-semibold text-gray-900 group-hover:text-primary-600">
                    {post.data.title}
                  </h3>
                  <p class="mt-2 text-gray-600">{post.data.description}</p>
                  <div class="mt-3 flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-600">
                        #{tag}
                      </span>
                    ))}
                  </div>
                </article>
              </a>
            </li>
          ))}
        </ul>
      )
    }
  </section>
</BaseLayout>
