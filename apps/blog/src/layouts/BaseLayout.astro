---
interface Props {
  title: string;
  description?: string;
  lang?: "ru" | "en";
}

const { title, description = "Context Engineering Blog", lang = "ru" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <header class="border-b border-gray-200 bg-white">
      <nav class="mx-auto flex max-w-4xl items-center justify-between px-4 py-4">
        <a href="/" class="text-xl font-bold text-primary-600">Context Engineering</a>
        <div class="flex items-center gap-4">
          <a href="/posts" class="text-gray-600 hover:text-primary-600">Posts</a>
          <div class="flex gap-2">
            <a href="/" class={lang === "ru" ? "font-bold" : "text-gray-400"}>RU</a>
            <span class="text-gray-300">/</span>
            <a href="/en" class={lang === "en" ? "font-bold" : "text-gray-400"}>EN</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="mx-auto max-w-4xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-gray-200 bg-white">
      <div class="mx-auto max-w-4xl px-4 py-6 text-center text-sm text-gray-500">
        Context Engineering Blog &copy; {new Date().getFullYear()}
      </div>
    </footer>
  </body>
</html>
